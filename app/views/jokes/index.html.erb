<div class="row">
  <div class="col-md-12">
    <p style="color: green"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-2 mb-3">
    <%= link_to new_joke_path do %>
      <button class="btn btn-sm btn-primary">New Joke</button>
    <% end %>
  </div>
  <div class="col-md-10" style="display: flex; flex-wrap: wrap;">
    <%= link_to jokes_path(uncategorized: true) do %>
      <%= render "categories/category", category: Category.new(title: "Uncategorized", color: "#777") %>
    <% end %>
    <% Category.all.each do |category| %>
      <%= link_to jokes_path("category_ids[]" => category.id) do %>
        <%= render "categories/category", category: category %>
      <% end %>
    <% end %>
  </div>
</div>

<div id="jokes" class="row">
  <% @jokes.each do |joke| %>
    <%= render joke %>
  <% end %>
</div>


