<%= render(partial: 'shared/notice', locals: { notice: }) %>

<div class="max-w-[475px] mx-auto mt-4">
  <p class="text-2xl font-semibold"><%= @joke.title %></p>
  <p class="whitespace-pre-wrap"><%= @joke.joke %></p>
  <%= render 'categories/preview', categories: @joke.categories %>
  <div class="flex flex-wrap justify-between mt-4">
    <%= button_to "Edit this joke", edit_joke_path(@joke), method: :get, class: 'btn-primary' %>
    <%= button_to "Discard this joke", @joke, method: :delete, class: 'btn-danger' %>
  </div>
</div>
